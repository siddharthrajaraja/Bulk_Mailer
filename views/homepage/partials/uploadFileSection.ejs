<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/assets/css/card.css">
<form action="/uploads"  enctype="multipart/form-data" method="POST">
            <div class="container card hoverable">

                <div class="card-header">
                <h5 class="center-align">Bulk Emailing System</h5> 
                </div>
                
            <div class="container valign-wrapper">

                <div class="row">
                    <div class="col s6">
                        <img src="/assets/images/sampleFileEmailList.PNG" class="responsive-img" alt="Sample-Email-List">
    
                    </div>
                    
                    <div class="col s6">
                        <div class="file-field input-field">
                            <div class="btn black">
                                <span> <i class="material-icons">edit</i> </span>
                                <input type="file" accept=".csv" name='emailList' id='emailList' >
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" placeholder="Click to Load File" type="text">
                            </div>
                        </div>
                        <br>
                        
                        <div class="input-field">
                            <input type="password" name="password" id="password">
                            <label for="password">Enter password</label>
                        </div>

                    </div>
                </div>
                
               
            </div>
            

            <div class="input-field col s12 mailBody">
                <textarea id='emailBody' name='emailBody' class="materialize-textarea"></textarea>
                <label for="textarea1">Body of Email</label>
                
            </div>
                
                <button class="black btn submit" type="submit" style="margin-left:45%" >Submit</button>
                <br> <br>
            
            </div>
</form>
