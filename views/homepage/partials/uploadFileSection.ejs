<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/assets/css/card.css">
<form action="/uploads"  enctype="multipart/form-data" method="POST">
            <div class="container card hoverable">

                <div class="card-header">
                <h5 class="center-align">Bulk Emailing System</h5> 
                </div>
                
            <div class="container valign-wrapper">

                <div class="row">
                    <div class="col s6">
                        <img src="/assets/images/sampleFileEmailList.PNG" class="responsive-img" alt="Sample-Email-List">
    
                    </div>
                    
                    <div class="col s6">
                        <div class="file-field input-field">
                            <div class="btn black">
                                <span> <i class="material-icons">attach_file</i> </span>
                                <input type="file" accept=".csv" name='emailList' id='emailList' >
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" placeholder="Load Email-IDs" type="text">
                            </div>
                        </div>
                        <br>
                        
                        <div class="input-field">
                            <input type="password" name="password" id="password">
                            <label for="password">Enter password</label>
                        </div>

                    </div>
                </div>
                
               
            </div>
            

            <div class="container bodyChoices">

                <!-- Switch -->
                <center>
                    <div class="switch">
                        <label>
                        Manual
                        <input type="checkbox" id='switcher' onchange="switching()">
                        <span class="lever"></span>
                        File Upload
                        </label>
                    </div>
                </center>

                <div class="input-field col s12 manualBody">
                    <textarea id='emailBody' name='manualEmailBody' class="materialize-textarea"></textarea>
                    <label for="textarea1">Body of Email</label>
                    
                </div>

                <div class="file-field input-field fileBody">
                    <div class="btn black">
                        <span> <i class="material-icons">attach_file</i> </span>
                        <input type="file" accept=".txt" name='emailBody' id='emailBody' >
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" placeholder="Load Email-Body" type="text">
                    </div>
                </div>
                



                
            </div>

                <br>
                
                <button class="black btn submit" type="submit" style="float:right" >Submit</button>
                <br> <br>
            
            </div>
</form>
<script>
    const params=new URLSearchParams(window.location.search)
    if(params.get('status')){
        alert(params.get('message'))
        window.location='/'
            
    }
    var switching=()=>{
        var choice=document.getElementById('switcher')
        console.log(choice.checked)
        if(choice.checked){
            document.getElementsByClassName('fileBody')[0].style.display='block';
            document.getElementsByClassName('manualBody')[0].style.display='none';
            
        }
        else{
            
            document.getElementsByClassName('fileBody')[0].style.display='none';
            document.getElementsByClassName('manualBody')[0].style.display='block';
            

        }
        

    }
</script>


